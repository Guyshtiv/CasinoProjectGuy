<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.SignInActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="false"
            android:gravity="center"
            android:text="Sign Up Page"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="45dp">

            <ImageButton
                android:id="@+id/userPictureImageButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/person_icon"
                android:layout_margin="5dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <EditText
        android:id="@+id/emailSignUp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:autofillHints=""
        android:background="@drawable/empty_background"
        android:drawableStart="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:drawingCacheQuality="auto"
        android:ems="10"
        android:hint="Email"
        android:inputType="text|textAutoComplete"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/passwordSignUp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:autofillHints=""
        android:background="@drawable/empty_background"
        android:drawableStart="@drawable/lock_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="text|textAutoComplete"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textColorLink="@color/black"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/verifyPasswordSignUp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:autofillHints=""
        android:background="@drawable/empty_background"
        android:drawableStart="@drawable/lock_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Verify Pass"
        android:inputType="text|textAutoComplete"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textColorLink="@color/black"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/userNameSignUp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:autofillHints=""
        android:background="@drawable/empty_background"
        android:drawableStart="@drawable/person_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="User Name"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textColorLink="@color/black"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnToSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/empty_background"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:padding="20dp"
        />

    <TextView
        android:id="@+id/tvFails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReturnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:text="already sign up?"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:padding="10dp" />

</LinearLayout>



